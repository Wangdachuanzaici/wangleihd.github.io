.Calendar
  font-size 0.9em
  background-color white
  text-align center
  padding 15px 20px
  line-height 1.5em
  a
    color color-link
  table
    width 100%
    border 0
    thead
      color #888
    td
      font-size 11px
      padding 1px

#idCalendarPre
  cursor pointer
  float left
  padding-right 5px

#idCalendarNext
  cursor pointer
  float right
  padding-right 5px

#idCalendar
  td
    &.onToday
      font-weight bold
      background-color #FFEFC6
      color #C60
      width: 16px;
      height: 14px;
    &.onSelect
      font-weight bold
